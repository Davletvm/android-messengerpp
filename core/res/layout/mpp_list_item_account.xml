<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
			  style="?mpp_list_item">

	<ImageView
			a:id="@+id/mpp_li_account_icon_imageview"
			style="?mpp_list_item_icon"/>

	<LinearLayout
			a:orientation="vertical"
			a:layout_weight="1"
			a:layout_width="0dp"
			a:layout_height="wrap_content"
			a:layout_gravity="center_vertical">

		<TextView
				a:id="@+id/mpp_li_account_user_name_textview"
				style="?mpp_list_item_name"/>

		<TextView
				a:id="@+id/mpp_li_account_name_textview"
				style="?mpp_list_item_text_secondary"/>

	</LinearLayout>

	<ImageView
			a:id="@+id/mpp_li_contact_online_view"
			style="?mpp_list_item_contact_online"
			a:visibility="gone"/>

	<ImageView
			a:id="@+id/mpp_li_account_warning_imageview"
			a:background="@drawable/mpp_li_warning_states"
			style="@style/mpp_list_item_right_button"
			a:visibility="gone"/>


</LinearLayout>