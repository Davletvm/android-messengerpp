<LinearLayout
		xmlns:a="http://schemas.android.com/apk/res/android"
		a:layout_width="match_parent"
		a:layout_height="match_parent"
		a:orientation="vertical">

	<TextView a:layout_height="wrap_content"
			  a:layout_width="match_parent"
			  a:text="@string/mpp_wizard_final_text"/>

	<TextView a:layout_height="wrap_content"
			  a:layout_width="match_parent"
			  a:layout_marginTop="10dp"
			  a:text="@string/mpp_wizard_final_ways_to_help"/>

	<Button a:id="@+id/mpp_wizard_final_become_tester_button"
			a:layout_height="wrap_content"
			a:layout_width="match_parent"
			a:text="@string/mpp_wizard_final_become_tester"/>

	<Button a:id="@+id/mpp_wizard_final_translate_button"
			a:layout_height="wrap_content"
			a:layout_width="match_parent"
			a:text="@string/mpp_wizard_final_translate"/>

	<Button a:id="@+id/mpp_wizard_final_contribute_button"
			a:layout_height="wrap_content"
			a:layout_width="match_parent"
			a:text="@string/mpp_wizard_final_contribute"/>

</LinearLayout>
